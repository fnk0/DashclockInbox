<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/settingsFrag"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dip"
        android:paddingEnd="16dip"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingStart="16dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/secondary_text_disabled_material_light"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dip">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/developer_image"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:src="@drawable/my_profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dip"
                android:layout_marginStart="16dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dev_name"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dev_gplus"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/ic_google_plus"
                        />

                    <ImageView
                        android:id="@+id/dev_in"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/ic_linked_in"
                        />

                    <ImageView
                        android:id="@+id/dev_git"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/ic_github"
                        />

                    <ImageView
                        android:id="@+id/dev_web"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/ic_link"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>